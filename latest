  <script>
    function showHome() {
      document.getElementById("home").style.display = "block";
      document.getElementById("subjects").style.display = "none";
      document.getElementById("simulation").style.display = "none";
      document.getElementById("analysis").style.display = "none";
      document.querySelector('.side-buttons').style.display = 'flex';
      document.querySelector('.side-buttons').style.flexDirection = 'column';
      document.getElementById("home-box").style.display = "block";
      document.getElementById("about").style.display = "block";
      document.getElementById("contact").style.display = "block";
      document.getElementById("help").style.display = "block";
    }

    function showSubjects() {
      document.getElementById("home").style.display = "none";
      document.getElementById("subjects").style.display = "block";
      document.getElementById("simulation").style.display = "none";
      document.getElementById("analysis").style.display = "none";
      document.querySelector('.side-buttons').style.display = 'flex';
      document.querySelector('.side-buttons').style.flexDirection = 'column';
      document.getElementById("home-box").style.display = "none";
      document.getElementById("about").style.display = "none";
      document.getElementById("contact").style.display = "none";
      document.getElementById("help").style.display = "none";
    }

    function showSimulation() {
      document.getElementById("home").style.display = "none";
      document.getElementById("subjects").style.display = "none";
      document.getElementById("simulation").style.display = "block";
      document.getElementById("analysis").style.display = "none";
      document.getElementById("home-box").style.display = "none";
      document.getElementById("about").style.display = "none";
      document.getElementById("contact").style.display = "none";
      document.getElementById("help").style.display = "none";
      document.querySelector('.side-buttons').style.display = 'none';
    }

    function showAnalysis() {
      document.getElementById("home").style.display = "none";
      document.getElementById("subjects").style.display = "none";
      document.getElementById("simulation").style.display = "none";
      document.getElementById("analysis").style.display = "block";
      document.getElementById("home-box").style.display = "none";
      document.getElementById("about").style.display = "none";
      document.getElementById("contact").style.display = "none";
      document.getElementById("help").style.display = "none";
      document.querySelector('.side-buttons').style.display = 'none';
    }

    document.addEventListener("DOMContentLoaded", () => {
      showHome();
    });

    function showAbout() {
      document.getElementById("home").style.display = "none";
      document.getElementById("about").style.display = "block";
      document.querySelector('.side-buttons').style.display = 'none';
    }

    function showContact() {
      document.getElementById("home").style.display = "none";
      document.getElementById("contact").style.display = "block";
      document.querySelector('.side-buttons').style.display = 'none';
    }

    function showHelp() {
      document.getElementById("home").style.display = "none";
      document.getElementById("help").style.display = "block";
      document.querySelector('.side-buttons').style.display = 'none';
    }
    
	function step2() {
	  const username = document.getElementById("username").value;
	  const password = document.getElementById("password").value;
  
	  if (username.length < 4 || password.length < 6) {
		alert("Username must be at least 4 characters and password must be at least 6 characters long.");
		return;
	  }
  
	  if (username && password) {
		document.getElementById("step1").classList.remove('fade');
		document.getElementById("step1").style.display = "none";
		document.getElementById("step2").classList.add('fade');
		document.getElementById("step2").style.display = "block";
	  } else {
		alert("Please enter both username and password!");
	  }
	}
  
	function step3() {
	  const program = document.getElementById("program").value; 
	  if (!program) {
		alert("Please select a program before proceeding.");
		return;
	  }
  
	  document.getElementById("step2").style.display = "none"; 
	  document.getElementById("step3").style.display = "block"; 
	}
  
	function validateCoursesAndProceed() {
	  const course1Checked = document.getElementById("course1").checked;
	  const course2Checked = document.getElementById("course2").checked;
	  const course3Checked = document.getElementById("course3").checked;
  
	  if (course1Checked || course2Checked || course3Checked) {
		document.getElementById("step3").style.display = "none";
		document.getElementById("step4").style.display = "block";
	  } else {
		alert("Please select at least one course.");
	  }
	}
  
	function step4() {
	  document.getElementById("step3").classList.remove('fade');
	  document.getElementById("step3").style.display = "none";
	  document.getElementById("step4").classList.add('fade');
	  document.getElementById("step4").style.display = "block";
	}
  
	function step5() {
	  document.getElementById("step4").classList.remove('fade');
	  document.getElementById("step4").style.display = "none";
	  document.getElementById("step5").classList.add('fade');
	  document.getElementById("step5").style.display = "block";
  
	  const selectedCourses = [];
	  if (document.getElementById("course1").checked) selectedCourses.push("Math 101");
	  if (document.getElementById("course2").checked) selectedCourses.push("English 101");
	  if (document.getElementById("course3").checked) selectedCourses.push("Science 101");
  
	  document.getElementById("result").innerHTML = `You have successfully enrolled in: ${selectedCourses.join(", ")}.`;
	}
  </script>  

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  function showAnalysis() {
    document.getElementById("home").style.display = "none";
    document.getElementById("subjects").style.display = "none";
    document.getElementById("simulation").style.display = "none";
    document.getElementById("analysis").style.display = "block";

    const ctx1 = document.getElementById('enrollmentTimeChart').getContext('2d');
    new Chart(ctx1, {
      type: 'bar',
      data: {
        labels: ['Step 1', 'Step 2', 'Step 3', 'Step 4', 'Step 5'],
        datasets: [{
          label: 'Average Time (seconds)',
          data: [30, 20, 15, 25, 10],
          backgroundColor: 'rgba(240, 84, 84, 0.7)',
          borderColor: 'rgba(240, 84, 84, 1)',
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        },
        plugins: {
          title: {
            display: true,
            text: 'Average Time Spent Per Enrollment Step'
          }
        }
      }
    });

    const ctx2 = document.getElementById('completionRateChart').getContext('2d');
    new Chart(ctx2, {
      type: 'pie',
      data: {
        labels: ['Completed', 'Incomplete'],
        datasets: [{
          data: [85, 15],
          backgroundColor: ['rgba(63, 191, 127, 0.7)', 'rgba(255, 99, 132, 0.7)']
        }]
      },
      options: {
        plugins: {
          title: {
            display: true,
            text: 'Enrollment Completion Rate'
          }
        }
      }
    });
  }
</script>

